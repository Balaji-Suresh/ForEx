<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/oops"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="@dimen/oops"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/oops" />

    <TextView
        fontPath="fonts/Montserrat_bold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/primary"
        android:gravity="center"
        android:text="@string/error_wrong"
        android:textColor="@color/primary_txt"
        android:textSize="@dimen/primary_txt"
        tools:ignore="MissingPrefix" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/error_refresh"
        android:textSize="@dimen/small_txt" />

    <Button
        android:id="@+id/btn_retry"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/secondary"
        android:text="Retry"
        android:textColor="@android:color/white" />

</LinearLayout>