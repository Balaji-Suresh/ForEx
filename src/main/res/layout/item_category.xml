<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/img_health_category"
            android:layout_width="@dimen/health_category"
            android:layout_height="@dimen/health_category"
            android:layout_margin="@dimen/secondary"
            android:adjustViewBounds="true"
            />

        <TextView
            fontPath="fonts/Catamaran-Regular.ttf"
            android:id="@+id/txt_health_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/primary"
            android:layout_marginStart="@dimen/primary"
            android:gravity="center"
            android:textColor="@color/primary_txt"
            android:textSize="15sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>